<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IDEX.MainPage"
             Title="IDEX">
    
    <StackLayout BackgroundColor="White"
         HorizontalOptions="Center" Margin="16"
        >
        <StackLayout Orientation="Horizontal" Spacing="10" >
            <Label Style="{StaticResource FirstScreenLabels}" HorizontalOptions="Start">Customer(s)</Label>
            <Label Style="{StaticResource FirstScreenLabels}" HorizontalOptions="Center">Scheme(s)</Label>
            <Label Style="{StaticResource FirstScreenLabels}" HorizontalOptions="End">Inspection(s)</Label>
        </StackLayout>
        <Image Source="slidder_image.jpg" Aspect="AspectFit"
               HeightRequest="60" HorizontalOptions="FillAndExpand" Margin="30"/>
        <StackLayout Orientation="Horizontal" Spacing="20" >
            <ListView HorizontalOptions="Start" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell StyleId="{StaticResource FirstScreenLabels}" Text="{Binding }"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView HorizontalOptions="Center" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell StyleId="{StaticResource FirstScreenLabels}" Text="KeroSchema"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView HorizontalOptions="End" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell StyleId="{StaticResource FirstScreenLabels}" Text="KeroInspection"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="Kero" ImageSource="first_screen_image1.png"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout HorizontalOptions="End" Orientation="Horizontal" >
            <Button Text="Back" BackgroundColor="White" TextColor="Black"/>
            <Button Text="next" Style="{StaticResource FirstScreenButtons}"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
